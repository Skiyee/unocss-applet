{
  "name": "@unocss-applet/monorepo",
  "version": "0.3.5",
  "private": true,
  "packageManager": "pnpm@8.1.0",
  "scripts": {
    "dev": "pnpm stub",
    "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build && pnpm -r run build-post",
    "release": "bumpp package.json packages/**/package.json",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "test": "vitest",
    "test:update": "vitest -u",
    "play:uni:mp-weixin": "npm -C playgrounds/uni-app run dev:mp-weixin",
    "build:uni:mp-weixin": "npm -C playgrounds/uni-app run build:mp-weixin",
    "play:uni:h5": "npm -C playgrounds/uni-app run dev:h5",
    "build:uni:h5": "npm -C playgrounds/uni-app run build:h5",
    "play:taro:weapp": "npm -C playgrounds/tarojs run dev:weapp",
    "build:taro:weapp": "npm -C playgrounds/tarojs run build:weapp",
    "play:taro:h5": "npm -C playgrounds/tarojs run dev:h5",
    "build:taro:h5": "npm -C playgrounds/tarojs run build:h5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.2",
    "@types/node": "^18.15.11",
    "@unocss-applet/preset-applet": "workspace:*",
    "@unocss-applet/preset-rem-rpx": "workspace:*",
    "@unocss-applet/transformer-applet": "workspace:*",
    "@unocss-applet/transformer-attributify": "workspace:*",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "esno": "^0.16.3",
    "magic-string": "^0.30.0",
    "rimraf": "^4.4.1",
    "typescript": "^5.0.3",
    "unbuild": "^1.2.0",
    "unocss": "^0.50.6",
    "unocss-applet": "workspace:*",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  }
}
